datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Plant {
  id               Int         @id @default(autoincrement())
  name             String
  slug             String      @unique
  difficulty       Int
  imageSrc         String
  lightExposure    String
  soilType         String
  description      String
  wateringInterval Int
  UserPlant        UserPlant[]
}

model UserPlant {
  id      Int    @id @default(autoincrement())
  user    User?  @relation(fields: [userId], references: [id])
  userId  Int?
  plant   Plant? @relation(fields: [plantId], references: [id])
  plantId Int?
}

model User {
  id     Int         @id @default(autoincrement())
  email  String      @unique
  name   String?
  plants UserPlant[]
}
